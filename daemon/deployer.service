[Unit]
Description=A deployment utility
Requires=polo.service
After=polo.service

[Service]

ExecStart=/usr/bin/python3 /opt/deployer/deployer/deployer.py &> /dev/null
ExecStop=/usr/bin/python3 /opt/deployer/daemon/deployerstop.py &> /dev/null

Type=simple
User=root
Group=root
PIDFile=/var/run/deployer/deployer.pid

[Install]
WantedBy=multi-user.target
